{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Dromedary demo - iam roles & policies and instance-profiles",
  "Parameters":{
    "DDBTableName":{
      "Type":"String",
      "Description":"Unique name for the Dromedary Dynamo DB table"
    }
  },
  "Resources":{
    "AppLambdaTrustRole":{
      "Type":"AWS::IAM::Role",
      "Properties":{
        "AssumeRolePolicyDocument":{
          "Statement":[
            {
              "Sid":"1",
              "Effect":"Allow",
              "Principal":{
                "Service":[
                  "lambda.amazonaws.com"
                ]
              },
              "Action":"sts:AssumeRole"
            }
          ]
        },
        "Path":"/",
        "Policies":[
          {
            "PolicyName": "AppLambdaPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "dynamodb:DeleteItem",
                    "dynamodb:GetItem",
                    "dynamodb:PutItem",
                    "dynamodb:Query",
                    "dynamodb:Scan",
                    "dynamodb:BatchGetItem",
                    "dynamodb:BatchWriteItem",
                    "dynamodb:UpdateItem"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Outputs":{
    "StackName":{
      "Value":{
        "Ref":"AWS::StackName"
      }
    },
    "AppLambdaRoleArn":{
      "Description":"The ARN of the Application Lambda Trust Role, which is needed to configure Lambda Function",
      "Value":{
        "Fn::GetAtt":[
          "AppLambdaTrustRole",
          "Arn"
        ]
      }
    }
  }
}